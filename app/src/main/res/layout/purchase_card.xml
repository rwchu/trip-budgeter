<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/item_text"
            android:text="Souvenir"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="end|center"
            android:id="@+id/price_text"
            android:text="$45"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/buyer_label_text"
            android:text="Purchased by: "
            android:textStyle="bold"
            android:layout_below="@+id/item_text"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buyer_text"
            android:text="Tim"
            android:layout_toRightOf="@+id/buyer_label_text"
            android:layout_below="@+id/item_text"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/payer_label_text"
            android:text="Split between: "
            android:textStyle="bold"
            android:layout_below="@+id/buyer_text"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payer_text"
            android:text="All"
            android:layout_toRightOf="@+id/payer_label_text"
            android:layout_below="@+id/buyer_label_text"
            android:textColor="#000"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>